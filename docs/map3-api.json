openapi: 3.0.0
info:
  description: |
    This is the Map3 Assets API Specification
    [http://swagger.io](http://swagger.io) or on 
    [irc.freenode.net, #swagger](http://swagger.io/irc/).
  version: 1.0.0-oas3
  title: Map3 Assets API
  termsOfService: https://map3.xyz/api/
  contact:
    email: arshad@map3.xyz
  license:
    name: Apache 2.0
    url: http://www.apache.org/licenses/LICENSE-2.0.html
tags:
  - name: map3
    description: Map3 Assets
externalDocs:
  description: Find out more about Map3
  url: https://map3.xyz
servers:
  - url: https://api.map3.xyz/v1
paths:
  /dbversion:
    get:
      summary: Get available database version.
      parameters:
        - in: query
          name: since
          schema:
            type: string
          required: false
          description: Get database versions since this version.
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                type: array
                items:
                  type: object
                  properties:
                    version:
                      type: string
                    created_date:
                      type: string
        '401':
          description: Unauthorized
      security:
        - map3_auth:
            - asset-read
  /network:
    get:
      summary: Get the details of all networks supported by Map3
      responses:
        '200':
          description: The details of all supported networks
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/NetworkInfo'
        '401':
          description: Permission denied
      security:
        - map3_auth:
            - asset-read
    put:
      summary: Create a new network
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/NetworkInfo'
      responses:
        '200':
          description: The details of all supported networks
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/NetworkInfo'
        '401':
          description: Permission denied
      security:
        - map3_auth:
            - asset-write
  /network/{networkId}:
    get:
      summary: Get the details of a specific network
      parameters: 
        - in: path
          name: networkId
          required: true
          schema:
            type: string
      responses:
        '200':
          description: The network asset details
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/NetworkInfo'
        '401':
          description: Permission denied
      security:
        - map3_auth:
            - asset-read
    put:
      summary: Create a new asset within the given network
      parameters: 
        - in: path
          name: networkId
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/AssetInfo'
      responses:
        '200':
          description: The asset was successfully created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/AssetInfo'
        '401':
          description: Permission denied
      security:
        - map3_auth:
            - asset-write
            
  /network/{networkId}/{address}:
    get:
      summary: Get the details of a specific asset on a network.
      parameters: 
        - in: path
          name: networkId
          required: true
          schema:
            type: string
        - in: path
          name: address
          required: true
          schema:
            type: string
      responses:
        '200':
          description: The asset details on the given network
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/AssetInfo'
        '401':
          description: Permission denied
      security:
        - map3_auth:
            - asset-read
            
components:
  securitySchemes:
    map3_auth:
      type: oauth2
      flows:
          authorizationCode:
            authorizationUrl: https://api.map3.xyz/oauth/authorize
            tokenUrl: https://api.map3.xyz/oauth/token
            scopes:
              asset-read: Grants read access to assets
              asset-write: Grants write access to assets
              asset-admin: Grants admin access
  schemas:
    BaseAssetInfo:
      type: object
      properties:
        id:
          type: string
        type:
          type: string
          enum:
            - network
            - asset
        networkId:
          type: string
        active:
          type: boolean
        color:
          type: string
        decimals: 
          type: number
        description:
          type: array
          items:
            $ref: '#/components/schemas/Description'
        links: 
          type: array
          items:
            $ref: '#/components/schemas/Link'
        logos: 
          type: array
          items:
            $ref: '#/components/schemas/Logo'
        name: 
          type: string
        spam: 
          type: boolean
        symbol: 
          type: string
        tags: 
          type: array
          items:
            $ref: '#/components/schemas/TagName'
        verifications: 
          type: array
          items:
            type: array
            items:
              $ref: '#/components/schemas/Verification'
        version: 
          type: string
    Description:
      type: object
      properties:
        locale: 
          type: string
          enum: [en,es,fr,de,it,ja,ko,pt,ru,zh]
        value: 
          type: string
        verified: 
          type: boolean
    Link:
      type: object
      properties:
        type:
          type: string
          enum: [explorer,research,website,github,medium,twitter,reddit,whitepaper]
        url:
          type: string
    Logo:
      type: object
      properties:
        format:
          type: string
          enum: [svg,png]
        url:
          type: string
    TagName:
      type: string
      enum: [stablecoin,staking,wrapped,leveraged,bull,bear]
    Verification:
      type: object
      properties:
        verified: 
          type: boolean
        type: 
          type: string
        timestamp:
          type: string
        proof: 
          $ref: '#/components/schemas/VerificationProof'
    VerificationProof:
      type: object
      properties:
        signature:
          type: string
        assertion:
          type: string
    NetworkInfo:
      type: object
      properties:
        id:
          type: string
        type:
          type: string
          enum:
            - network
        networkId:
          type: string
    AssetInfo:
      type: object
      properties:
        id:
          type: string
        type:
          type: string
          enum:
            - asset
        networkId:
          type: string